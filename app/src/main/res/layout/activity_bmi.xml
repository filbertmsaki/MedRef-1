<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979797">
<LinearLayout
    android:id="@+id/ly1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="20dp">
    <TextView
        android:id="@+id/heighttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="30dp"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/ly2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly1"
    android:layout_centerHorizontal="true">

    <EditText
        android:id="@+id/heightData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/edit_bg"
        android:ems="6"
        android:hint="155"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textAlignment="center"
        tools:ignore="LabelFor" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Cm"
        android:textSize="18sp"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/ly3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/ly4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly3"
    android:layout_centerHorizontal="true"
    >
    <EditText
        android:id="@+id/weightData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:ems="6"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kg"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ly5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly4"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/calculate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calculateBMI"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"
            android:text="Calculate"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/ly6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly5"
    android:layout_centerHorizontal="true"
    >
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Results:"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        />
</LinearLayout>

<LinearLayout
    android:id="@+id/ly8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly6"
    >
    <TextView
        android:id="@+id/results"
        android:layout_width="333dp"
        android:layout_height="167dp"
        android:text="Your BMI is: "
        android:textSize="24dp"
        android:background="@drawable/edit_bg"
        android:layout_marginStart="20dp"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/ly9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly8"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    >
    <Button
        android:id="@+id/home_btn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="HOME"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="20dp"
        />
    <Button
        android:id="@+id/dietbtn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="Food and Diet"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="10dp"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/ly10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly9"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    >
    <Button
        android:id="@+id/fitnessbtn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="Fitness"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/profilebtn"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:text="Profile"
        android:background="@drawable/btn_bg"
        android:layout_marginStart="10dp"
        />
</LinearLayout>

</RelativeLayout>